# backend/Dockerfile
FROM python:3.11-slim

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /app

# Copy the package folder into /app/app
COPY ./app /app/app

# Optional: copy requirements if present
COPY requirements.txt /app/requirements.txt

# Install deps (use requirements.txt if available, otherwise install minimal)
RUN apt-get update \
 && apt-get install -y --no-install-recommends gcc \
 && python -m pip install --upgrade pip setuptools wheel \
 && if [ -f /app/requirements.txt ]; then pip install --no-cache-dir -r /app/requirements.txt; else pip install --no-cache-dir fastapi "uvicorn[standard]" requests; fi \
 && apt-get purge -y --auto-remove gcc \
 && rm -rf /var/lib/apt/lists/* /root/.cache/pip

# Ensure Python can import package 'app'
ENV PYTHONPATH=/app

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]



